<h2><%= page_title %></h3>

<%= simple_form_for @automation do |f| %>
  <%= f.input :name, as: :string %>

  <%= f.simple_fields_for :campaign do |c| %>
    <%= c.input :from_name, wrapper_html: { class: 'half' } %>
    <%= c.input :from_email, wrapper_html: { class: 'half' } %>
    <%= c.input :subject %>

    <ul class="nav-tabs">
      <li class="active"><%= link_to 'HTML', '#html', data: { toggle: 'tab' } %></li>
      <li><%= link_to 'Text', '#text', data: { toggle: 'tab' } %></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="html">
        <%= c.input_field :html_text, rows: 14 %>
        <%= c.error :html_text %>
      </div>

      <div class="tab-pane" id="text">
        <%= c.input_field :plain_text, rows: 14 %>
        <%= c.error :plain_text %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.button :submit %>
    <%= link_to t('actions.back'), campaigns_path, class: 'btn btn-danger' %>
  </div>
<% end %>
