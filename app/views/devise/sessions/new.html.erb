<%= render 'shared/flashes', hide_close: true %>

<div class="wrapper">
  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'login' } do |f| %>
    <%= f.input :email, as: :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.button :submit, "Log In" %>

    <%= link_to t('.forgot_password'), new_password_path(resource_name) %>
  <% end %>

  <p class="call-registrations">
    <%= t('.sign_up_hint') %>
    <%= link_to t('.sign_up'), new_registration_path(resource_name) %>
  </p>
</div>
