<h2>
  <%= @campaign.name %>
  <%= @campaign.long_sent_at %>
</h2>

<div class="metrics">
  <div class="totals">
    <h3>
      <%= number_with_delimiter @campaign.recipients_count %>
      <span><%= t '.emails_sent' %></span>
    </h3>
  </div>

  <div class="delivered">
    <div class="box"></div>
    <h3><%= @campaign.delivered %> <span><%= t '.delivered' %></span></h3>
  </div>

  <div class="bounces">
    <div class="box"></div>
    <h3><%= @campaign.bounces %> <span><%= t '.bounces' %></span></h3>
  </div>

  <div class="complaints">
    <div class="box"></div>
    <h3><%= @campaign.complaints %> <span><%= t '.complaints' %></span></h3>
  </div>

  <div class="unsent">
    <div class="box"></div>
    <h3><%= @campaign.unsent %> <span><%= t '.unsent' %></span></h3>
  </div>
</div>

<%= @campaign.progress %>

<div class="rates">
  <div class="opens">
    <h3>
      <%= t '.open_rate' %>
      <%= percentage_tag @campaign.to_percentage(:unique_opens_count), css_class: :percentage %>
    </h3>

    <%= @campaign.meter_tag(:unique_opens_count) %>
  </div>

  <div class="clicks">
    <h3>
      <%= t '.click_rate' %>
      <%= percentage_tag @campaign.to_percentage(:unique_clicks_count), css_class: :percentage %>
    </h3>

    <%= @campaign.meter_tag(:unique_clicks_count) %>
  </div>
</div>
