<% if alert %>
  <div class="flash flash-alert">
    <%= h alert %>
  </div>
<% end %>

<div class="wrapper">
  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'login' } do |f| %>
    <%= f.input :email, as: :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.button :submit, "Log in" %>

    <%= link_to t('.forgot_password'), new_password_path(resource_name) %>
  <% end %>

  <p class="call-registrations">Don't have an account? <%= link_to 'Sign Up', new_registration_path(resource_name) %></p>
</div>
