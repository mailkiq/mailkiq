<h2>
  <%= @campaign.name %>
  <%= @campaign.long_sent_at %>
</h2>

<div class="metrics">
  <div class="delivered">
    <div class="box"></div>
    <h3>
      <%= number_with_delimiter @campaign.messages_count %>
      <span><%= @campaign.delivered %> <%= t '.delivered' %></span>
    </h3>
  </div>

  <div class="bounces">
    <div class="box"></div>
    <h3>
      <%= number_with_delimiter @campaign.bounces_count %>
      <span><%= @campaign.bounces %> <%= t '.bounces' %></span>
    </h3>
  </div>

  <div class="complaints">
    <div class="box"></div>
    <h3>
      <%= number_with_delimiter @campaign.complaints_count %>
      <span><%= @campaign.complaints %> <%= t '.complaints' %></span>
    </h3>
  </div>

  <div class="unsent">
    <div class="box"></div>
    <h3>
      <%= number_with_delimiter @campaign.unsent_count %>
      <span><%= @campaign.unsent %> <%= t '.unsent' %></span>
    </h3>
  </div>
</div>

<%= @campaign.progress %>

<div class="rates">
  <div class="opens">
    <h3>
      <%= t '.open_rate' %>
      <%= percentage_tag @campaign.to_percentage(:unique_opens_count), css_class: :percentage %>
    </h3>

    <%= @campaign.meter_tag(:unique_opens_count) %>
  </div>

  <div class="clicks">
    <h3>
      <%= t '.click_rate' %>
      <%= percentage_tag @campaign.to_percentage(:unique_clicks_count), css_class: :percentage %>
    </h3>

    <%= @campaign.meter_tag(:unique_clicks_count) %>
  </div>
</div>
