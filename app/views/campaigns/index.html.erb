<h2>
  <%= page_title %>
  <%= link_to t('.new_campaign'), new_campaign_path, class: 'btn' %>
</h2>

<table class="table">
  <thead>
    <tr>
      <th width="400"><%= sortable 'name', t('.campaign') %></th>
      <th width="108"><%= sortable 'recipients_count', t('.recipients') %></th>
      <th><%= sortable 'unique_opens_count', t('.unique_opens') %></th>
      <th width="110"><%= sortable 'unique_clicks_count', t('.unique_clicks') %></th>
      <th width="231"></th>
    </tr>
  </thead>
  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= number_with_delimiter campaign.messages_count %></td>
        <td>
          <%= number_with_delimiter campaign.unique_opens_count %>
          <%= percentage_badge_tag campaign.unique_opens_count, campaign.messages_count  %>
        </td>
        <td>
          <%= number_with_delimiter campaign.unique_clicks_count %>
          <%= percentage_badge_tag campaign.unique_clicks_count, campaign.messages_count  %>
        </td>
        <td class="actions">
          <%= link_to t('actions.preview'), preview_campaign_path(campaign) %>
          <%= link_to t('actions.send'), new_campaign_delivery_path(campaign) %>
          <%= link_to t('actions.edit'), edit_campaign_path(campaign) %>
          <%= link_to_delete campaign_path(campaign) %>
        </td>
      </tr>
    <% end %>

    <% unless @campaigns.any? %>
      <tr>
        <td colspan="5"><%= t '.no_campaigns' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
