<h2><%= page_title %></h2>

<%= simple_form_for @delivery, url: campaign_delivery_path(@campaign) do |f| %>
  <%= f.error :base %>

  <%= f.input :tagged_with, as: :select, collection: @delivery.tags,
                            input_html: { multiple: true, style: 'width: 100%' } %>

  <%= f.input :not_tagged_with, as: :select, collection: @delivery.tags,
                            input_html: { multiple: true, style: 'width: 100%' } %>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
