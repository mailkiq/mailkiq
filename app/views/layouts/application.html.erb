<!DOCTYPE html>
<html class="<%= html_class %>">
  <head>
    <%= render 'shared/head' %>
    <%= render 'shared/mixpanel' %>
  </head>
  <body data-route="<%= dispatcher_route %>">
    <header class="header">
      <div class="container">
        <h1 class="brand">Mailkiq</h1>

        <nav class="nav">
          <ul>
            <%= nav_link_to :dashboard, signed_in_root_path %>
            <%= nav_link_to :campaigns, campaigns_path %>
            <%= nav_link_to :subscribers, subscribers_path %>
          </ul>
        </nav>

        <div class="dropdown-wrapper">
          <a href="#" class="dropdown-toggle ss-settings"></a>

          <ul class="dropdown animated">
            <li><%= link_to t('nav.links.my_account'), account_settings_path, class: 'ss-user right' %></li>
            <li><%= link_to t('nav.links.domains'), domains_settings_path, class: 'ss-mail right' %></li>
            <li><%= link_to t('nav.links.sign_out'), sign_out_path, method: :delete, class: 'ss-logout right' %></li>
          </ul>
        </div>
      </div>
    </header>

    <%= render 'shared/flashes' %>

    <div class="main container">
      <%= yield %>
    </div>
  </body>
</html>
