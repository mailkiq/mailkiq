<h2><%= page_title %></h3>

<%= simple_form_for @campaign, html: { class: 'campaign-form' } do |f| %>
  <%= f.input :name, wrapper_html: { class: 'half' }, as: :string %>
  <%= f.input :subject, wrapper_html: { class: 'half' } %>
  <%= f.input :from_name, wrapper_html: { class: 'half' } %>
  <%= f.input :from_email, wrapper_html: { class: 'half' } %>

  <div class="tabs-labels">
    <%= f.label :html_text, class: 'active' %>
    <%= f.label :plain_text %>
  </div>

  <div class="tabs first">
    <div class="tab active" data-tab="html_text">
      <%= f.input_field :html_text, rows: 14 %>
      <%= f.error :html_text %>
    </div>

    <div class="tab" data-tab="plain_text">
      <%= f.input_field :plain_text, rows: 14 %>
      <%= f.error :plain_text %>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit %>
    <%= link_to t('actions.back'), campaigns_path, class: 'btn btn-danger' %>
  </div>
<% end %>
