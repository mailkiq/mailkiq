<div class="wrapper">
  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
    <%= f.input :paypal_customer_token, as: :hidden %>
    <%= f.input :paypal_payment_token, as: :hidden %>
    <%= f.input :plan_id, as: :hidden %>

    <% if resource.paypal? %>
      <p>Payment has been provided. Click "Subscribe" to complete the subscription.</p>
      <%= f.button :submit, "Subscribe" %>
    <% else %>
      <% if resource.plan_id? %>
        <h1>Signing up for <%= resource.plan.name %> plan</h1>
        <p>
          Includes <strong><%= number_to_human resource.plan.credits %> e-mails</strong>
          for only <strong><%= number_to_currency resource.plan.price %></strong> per month!
        </p>
      <% else %>
        <p><%= link_to 'Go back', root_path %> and select a plan!</p>
      <% end %>

      <%= f.input :name, autofocus: true %>
      <%= f.input :email, as: :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.button :submit, "Pay with PayPal" %>
    <% end %>
  <% end %>
</div>
