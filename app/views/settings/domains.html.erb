<h2 class="page-title"><%= page_title %></h2>

<div class="forms">
  <% unless current_account.tied_to_mailkiq? %>
    <div class="amazon">
      <%= simple_form_for current_account, url: domains_settings_path, html: { method: :put } do |f| %>
        <h2 class="subtitle"><%= t '.authentication' %></h2>

        <%= f.input :aws_access_key_id %>
        <%= f.input :aws_secret_access_key %>
        <%= f.input :aws_region, include_blank: false, collection: Account::REGIONS.map(&:to_sym), hint: false %>

        <div class="actions">
          <%= f.hint :aws_region %>
          <%= f.button :submit, 'Update' %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="domains">
    <h2 class="subtitle"><%= t '.domains' %></h2>

    <% if current_account.domains.any? %>
      <table class="table">
        <thead>
          <tr>
            <th><%= t '.domain' %></th>
            <th><%= t '.status' %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% current_account.domains.each do |domain| %>
            <tr>
              <td><%= link_to domain.name, domain_path(domain) %></td>
              <td><%= domain_status_tag domain.verification_status %></td>
              <td class="actions">
                <%= icon_link_to :info, domain_path(domain) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>You must create a new domain to start sending e-mails, and we will give you the instructions to configure the DNS records.</p>
    <% end %>

    <%= simple_form_for :domain, url: domains_path do |f| %>
      <%= f.input :name, label: false %>
    <% end %>
  </div>
</div>
